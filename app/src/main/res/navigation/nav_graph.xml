<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/libraryFragment">

    <fragment
        android:id="@+id/libraryFragment"
        android:name="com.example.webnovellibrary.LibraryFragment"
        android:label="Library"
        tools:layout="@layout/fragment_library" >
        <action
            android:id="@+id/action_libraryFragment_to_novelsFragment"
            app:destination="@id/novelsFragment" />
    </fragment>
    <fragment
        android:id="@+id/novelsFragment"
        android:name="com.example.webnovellibrary.NovelsFragment"
        android:label="Novels"
        tools:layout="@layout/fragment_novels" >
        <argument
            android:name="folder"
            app:argType="com.example.webnovellibrary.Folder" />
        <argument
            android:name="position"
            app:argType="integer" />
        <action
            android:id="@+id/action_novelsFragment_to_webViewFragment"
            app:destination="@id/webViewFragment" />
    </fragment>
    <fragment
        android:id="@+id/webViewFragment"
        android:name="com.example.webnovellibrary.WebViewFragment"
        android:label=""
        tools:layout="@layout/fragment_web_view" >
        <argument
            android:name="url"
            app:argType="string" />
        <argument
            android:name="position"
            app:argType="integer" />
    </fragment>
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.example.webnovellibrary.SearchFragment"
        android:label="Search"
        tools:layout="@layout/fragment_search" >
        <action
            android:id="@+id/action_searchFragment_to_webViewFragment"
            app:destination="@id/webViewFragment" />
    </fragment>
</navigation>